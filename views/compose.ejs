<%- include("partials/header") -%> 

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="title_text">Title</label>
        <input type="text" name="postTitle" id="title_text" class="form-control">
    </div>
    <div class="form-group">
        <label for="post_text">Post</label>
        <textarea class="form-control" name="postBody" id="post_text" cols="70" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="publish">Publish</button>
</form>


<%- include("partials/footer") -%> 



